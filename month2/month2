def git_introduction():
    messages = [
        "You may wonder why this code is in GitHub. It's because I learned GitğŸ™‚. Oh, and command lineğŸ˜®â€ğŸ’¨",
        "Simple commands:\n      pwd - check current directory\n      mkdir - make a directory\n      cd - change directory\n      touch - make a file\n      ...and many moreğŸ˜",
        "Git, a version control system to manage stuff that you'll push to GitHub, the platform. Multiple commands:",
        "\n      git init - initialize gitğŸ¤™\n      git checkout - navigate branchesğŸš¶â€â™‚ï¸â€â¡ï¸\n      git clone - get existing copy of a repoğŸ¤²\n      git merge - integrate changes from other branchesğŸ¤"
    ]
    display_messages(messages)

def display_messages(messages):
    for message in messages:
        print(blue + message + reset)
        input(green + "..." + reset)

def main():
    display_banner(logo)
    print(cyan + "Welcome to month 2 recap of KamiLimu with me. (IK you need mentorship around here, so type 'help', I'll show you aroundğŸ™‚" + reset)
    while True:
        command = input(red + "What do you wanna recap?: " + reset).strip().lower()
        
        if command == "help":
            display_help()
        elif command == "summary":
            summarize_month2()
        elif command == "scholarship":
            scholarship_lessons()
        elif command == "publicspeaking":
            public_speaking_lessons()
        elif command == "git":
            git_introduction()
        elif command == "exit":
            print(green + "Exiting KamiLimu month 2. Hope you had funğŸ˜›. Remember to stay hungry and stay foolishğŸ™‚" + reset)
            break
        else:
            print(yellow + "Don't be immodestğŸ™‚. Just ask for 'help'\n" + reset)

if __name__ == "__main__":
    main()